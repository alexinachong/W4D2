<h1>Edit info for <%= @cat.name %></h1>

<form action="<%= cat_url(@cat) %>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value="<%= @cat.name %>">

  <br /><br />

  <label for="birth_date">Date of birth</label>
  <input id="birth_date" type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>">

  <br /><br />

  <label for="color">Color</label>
  <select id="color" name="cat[color]">
    <option disabled selected>--select a color--</option>
    <option value="red">Red</option>
    <option value="green">Green</option>
    <option value="blue">Blue</option>
  </select>

  <br /><br />

  <label for="sex">Sex</label>
  <input id="sex" type="radio" name="cat[sex]" value='M'>Male

  <input id="sex" type="radio" name="cat[sex]" value='F'>Female

  <br /><br />

  <label for="description">Description</label>
  <textarea id="description" name="cat[description]"></textarea>

  <br /><br />

  <input type="submit" value="Add Cat">
</form>
